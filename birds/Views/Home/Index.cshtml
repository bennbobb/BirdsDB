@model birds.Models.BirdsStatistics

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Birds</h1>
    <p>A platform for bird data record keeping and analysis</p>
    <br />

    <h4>Site Statistics</h4>
    <table class="StatTable">
        <tbody>
            <tr>
                <td>Domains: </td>
                <td>@Html.DisplayFor(modelItem => Model.numDomains)</td>
            </tr>
            <tr>
                <td>Kingdoms: </td>
                <td>@Html.DisplayFor(modelItem => Model.numKingdoms)</td>
            </tr>
            <tr>
                <td>Phylums: </td>
                <td>@Html.DisplayFor(modelItem => Model.numPhylums)</td>
            </tr>
            <tr>
                <td>Classes: </td>
                <td>@Html.DisplayFor(modelItem => Model.numClasses)</td>
            </tr>
            <tr>
                <td>Orders: </td>
                <td>@Html.DisplayFor(modelItem => Model.numOrders)</td>
            </tr>
            <tr>
                <td>Families: </td>
                <td>@Html.DisplayFor(modelItem => Model.numFamily)</td>
            </tr>
            <tr>
                <td>Genus: </td>
                <td>@Html.DisplayFor(modelItem => Model.numGenus)</td>
            </tr>
            <tr>
                <td>Species<sup>*</sup>: </td>
                <td>@Html.DisplayFor(modelItem => Model.numSpecies)</td>
            </tr>
            <tr>
                <td>SubSpecies: </td>
                <td>@Html.DisplayFor(modelItem => Model.numSubSpecies)</td>
            </tr>
            <tr>
                <td>Common Names: </td>
                <td>@Html.DisplayFor(modelItem => Model.numCommonNames)</td>
            </tr>
        </tbody>
    </table>

    <br />
    <p>
        Citation: HBW and BirdLife International (2020) Handbook of the Birds of the World and BirdLife International digital checklist of the birds of the world. Version 5.
        <br />Available at: http://datazone.birdlife.org/userfiles/file/Species/Taxonomy/HBW-BirdLife_Checklist_v5_Dec20.zip [.xls zipped 1 MB].
        <br />Taxonomic notes for all species are now in a separate document, also available on the BirdLife taxonomy page: http://datazone.birdlife.org/species/taxonomy

        <br /> Species data also collected from: 
        IUCN 2021. IUCN Red List of Threatened Species. Version 2021-2 <www.iucnredlist.org>
    </p>
</div>
